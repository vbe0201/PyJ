# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{md,rst}]
trim_trailing_whitespace = false

[{*.py,*.bzl,BUILD,WORKSPACE}]
indent_size = 4
max_line_length = 79

[*.java]
indent_size = 4
max_line_length = 80

[Makefile]
indent_size = 4
indent_style = tab
